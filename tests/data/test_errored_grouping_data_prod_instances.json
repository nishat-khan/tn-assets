{
  "group_name": "production-instances",
  "rules": [
      {
          "conditions": {
              "operator": "OR",
              "conditions": [
                  {
                      "operator": "AND",
                      "conditions": [
                          {"field": "type", "operator": "==", "value": "ec2-instance"},
                          {"field": "tags", "operator": "==", "key": "env", "value": "stage"}
                      ]
                  },
                  {"field": "name", "operator": "contains", "value": "prod"}
              ]
          }
      }
  ]
}
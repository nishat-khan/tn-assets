{
    "group_name": "production-instances",
    "rules": [
        {
            "conditions": {
                "operator": "AND",
                "conditions": [
                    {
                        "field": "type",
                        "operator": "==",
                        "value": "ec2-instance"
                    },
                    {
                        "operator": "OR",
                        "conditions": [
                            {
                                "field": "tags",
                                "operator": "contains",
                                "key": "env",
                                "value": "prod"
                            },
                            {
                                "field": "name",
                                "operator": "contains",
                                "value": "prod"
                            }
                        ]
                    }
                ]
            }
        }
    ]
}